<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
app:layout_behavior="@string/appbar_scrolling_view_behavior"

>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_border"
        android:id="@+id/tableLayout"
        android:stretchColumns="1,2,3">
        <TableRow android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center">
            <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/store_logo"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$$ . Pizza,Cafe"
                android:gravity="left"
                android:layout_margin="@dimen/text_margin"/>
            <Button
                android:id="@+id/schedule_from_bookmark"
                android:textSize="1.5mm"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/btn_schedule"/>
        </TableRow>

        <TableRow android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:textSize="4mm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Patachon"
                android:layout_span="1"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:gravity="center_horizontal">

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar"
                    android:rating="4"
                    style="?android:attr/ratingBarStyleSmall" />
            </LinearLayout>

        </TableRow>

        <TableRow android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center">
            <TextView

                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:drawableLeft="@drawable/location_icon"/>
            <TextView
                android:textSize="2mm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_margin="@dimen/text_margin"
                android:layout_span="2"
                android:text="2585 California St Mountain View, CA 94040" />

        </TableRow>
        <TableRow android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center">
            <TextView

                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:drawableLeft="@drawable/phone_icon"/>
            <TextView
                android:textSize="2mm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_margin="@dimen/text_margin"
                android:layout_span="2"
                android:text="(650) 254-1120" />

        </TableRow>
</TableLayout>


</android.support.v4.widget.NestedScrollView>

